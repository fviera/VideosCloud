        <td><%= concurso.url %></td>
        <td><%= concurso.fechaini %></td>
        <td><%= concurso.fechafin %></td>
        <td><%= link_to 'Ver Detalle', concurso %></td>
        <td><%= link_to 'Editar', edit_concurso_path(concurso) %></td>
        <td><a data-method="delete" href="/concursos/<%= concurso.id %>/destroy" rel="nofollow">Borrar</a>
      </tr>
  <% end %>
  </tbody>
</table>
