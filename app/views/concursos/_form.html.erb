<%= form_for(@concurso) do |f| %>
    <% if @concurso.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@concurso.errors.count, "error") %> prohibited this concurso from being saved:</h2>

          <ul>
            <% @concurso.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field form-group">
      <%= f.label :nombre, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :nombre %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :banner, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :banner %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :url, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :url %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label "Fecha Inicial ", class: 'col-sm-2 control-label' %>
      <div>
        <%= f.date_select :fechaini  %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label "Fecha Final", class: 'col-sm-2 control-label' %>
      <div>
        <%= f.date_select :fechafin %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :premio, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :premio %>
      </div>
    </div>

    <%= f.hidden_field :administrador_id %>


    <div class="actions form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Crear Concurso",class: 'btn btn-primary' %>
      </div>
    </div>

<% end %>
